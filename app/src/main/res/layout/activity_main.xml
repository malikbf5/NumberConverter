<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">
 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yankees_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="48dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="From"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="To"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkedButton="@id/from_dec"
            android:orientation="vertical">
            <RadioButton android:id="@+id/from_bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Binary"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/from_oct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Octal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/from_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Decimal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton android:id="@+id/from_hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Hexadecimal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checkedButton="@id/to_dec"
            android:orientation="vertical">
            <RadioButton android:id="@+id/to_bin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Binary"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onSecondRadioButtonClicked"/>
            <RadioButton android:id="@+id/to_oct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Octal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onSecondRadioButtonClicked"/>
            <RadioButton android:id="@+id/to_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Decimal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onSecondRadioButtonClicked"/>
            <RadioButton android:id="@+id/to_hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Hexadecimal"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:onClick="onSecondRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textSize="40sp"
            android:inputType="number"
            android:hint="type here"
            android:id="@+id/input_text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="48dp"
            android:textSize="40sp"
            android:text="the result"
            android:id="@+id/result"
            android:textColor="@color/white"/>


    </LinearLayout>


 </LinearLayout>
</ScrollView>